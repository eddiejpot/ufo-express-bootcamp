            <th scope="col">#Sightings</th>
            <th scope="col">Btn</th>
          </tr>
        </thead>
        <tbody>
        <!-- Create new element for each sighting -->
        <% sightingsGroupedByShapeArr.forEach(([shape,arr],i) => { %>
          <tr>
            <th scope="row"><%= i+1 %> </th>
            <td><%= shape%></td>
            <td><%= arr.length%></td>
            <td>
              <a class="btn btn-primary" href="/shapes/<%= shape%>" role="button">View</a>
            </td>
          </tr>
        <% }); %>          
        </tbody>
      </table>

      <div class = 'row my-row justify-content-center'>

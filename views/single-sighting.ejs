<%- include ('partials/header') %> 

    <%- include ('partials/nav') %> 
    <!-- USING JUMBOTRON -->
    <section class="jumbotron my-jumbotron text-center">
      <h1>SIGHTING</h1>
      <h4 class="">ðŸ‘½ðŸ‘€</h4>
      <hr class="my-4" />
      <p><strong>Date Posted: </strong> <%= sightingInfo.sighting.post_create_date_time %></p>
    </section>

    <section class = 'container-fluid my-container sightings'>
      <div class = 'row my-row justify-content-center'>
        <div class="col-12 my-col">
          <p><strong>Date of sighting:</strong></p>
          <p><%= sightingInfo.sighting.sighting_date %> <%= sightingInfo.sighting.sighting_time %></p>
        </div>
        <div class="col-12 my-col">
          <p><strong>City/State </strong></p>
          <p><%= sightingInfo.sighting.city %> | <%= sightingInfo.sighting.state %></p>
        </div>
        <div class="col-12 my-col">
          <p><strong>Duration: </strong></p>
          <p><%= sightingInfo.sighting.duration %></p>
        </div>
        <div class="col-12 my-col">
          <p><strong>Shape: </strong></p>
          <p><%= sightingInfo.sighting.shape %></p>
        </div>
        <div class="col-12 my-col">
          <p><strong>Summary</strong></p>
          <p><%= sightingInfo.sighting.summary %></p>
        </div>
        <div class="col-12 my-col">
          <p><strong>Description</strong></p>
          <p><%= sightingInfo.sighting.text %></p>
        </div>
      </div>

      <div class = 'row my-row justify-content-center'>
        <div class="col-12 my-col">
          <a class="btn btn-primary btn-edit" href="/sighting/<%= sightingIndex.index %>/edit" role="button">Edit this post</a>
        </div>
        <div class = 'col-12 my-col'>
          <form action='/sighting/<%= sightingIndex.index%>?_method=DELETE' method="POST">
            <button type="submit" class="btn btn-danger btn-delete">Delete This Post</button>
          </form>
        </div>
      </div>

      <div class = 'row my-row justify-content-center'>
        <a href="/" >Back to homepage</a>
      </div>
    </section>

<%- include ('partials/footer') %> 